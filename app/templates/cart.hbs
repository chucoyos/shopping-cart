<main class="container mt-5">
    <h1>Shopping Cart</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <LinkTo @route="index">
                Home
            </LinkTo>
        </li>
        <li class="breadcrumb-item">Shopping-cart</li>
    </ol>

    {{#each this.cart.itemList as |item|}}
        <div class="cart-item d-flex align-items-center">
            <div class="cart-item-thumbnail">
                <img class="" src="{{item.image}}" alt="">
            </div>
            <div class="ml-3">
              <h4>{{item.name}}</h4>
              <i class="font-weight-">{{currency item.price}}</i>
            </div>
            <input 
              type="number" 
              class="ml-auto" 
              value={{item.count}}
              {{on "input" (fn this.updateItemCount item)}}  
            >
        </div>
    {{/each}}
    <section class="w-100 ml-auto text-end mb-5">
        <div class="d-flex justify-content-end">
            <span class="col-1">Subtotal</span>
            <span class="col-1">{{ currency this.subtotal }}</span>
        </div>
        <div class="d-flex justify-content-end">
            <span class="col-1">Tax</span>
            <span class="col-1">{{ currency this.tax }}</span>
        </div>
        <div class="d-flex justify-content-end">
            <span class="col-1">Total</span>
            <span class="col-1">{{ currency this.total }}</span>
        </div>
    </section>

    <button class="btn btn-success float-right" type="button">Check out</button>
</main>
{{outlet}}